<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.newsappbottomnav.bottomnavigation.NewsFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.newsappbottomnav.bottomnavigation.SearchFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.newsappbottomnav.bottomnavigation.SourceFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_source" />
    <fragment
        android:id="@+id/corousalSwapFragment"
        android:name="com.example.newsappbottomnav.ui.layouts.CorousalSwapFragment"
        android:label="fragment_corousal_swap"
        tools:layout="@layout/fragment_corousal_swap" />
    <fragment
        android:id="@+id/detailInfoFragment"
        android:name="com.example.newsappbottomnav.ui.DetailInfoFragment"
        android:label="fragment_detail_info"
        tools:layout="@layout/fragment_detail_info" />
    <fragment
        android:id="@+id/gridFragment"
        android:name="com.example.newsappbottomnav.ui.layouts.GridFragment"
        android:label="fragment_grid"
        tools:layout="@layout/fragment_grid" />
    <fragment
        android:id="@+id/linearSwapFragment"
        android:name="com.example.newsappbottomnav.ui.layouts.LinearSwapFragment"
        android:label="fragment_linear_swap"
        tools:layout="@layout/fragment_linear_swap" />
</navigation>