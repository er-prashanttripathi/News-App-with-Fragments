<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="16dp"
    android:layout_marginTop="15dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="16dp"
    android:backgroundTint="@color/bg_dark"
    app:strokeWidth="2dp"
    app:strokeColor="@color/bg_blue"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingVertical="5dp"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/newsTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/inter"
                android:maxLines="2"
                android:text="textView textView textView textView textView textView textView textView"
                android:textColor="@color/txt_pink"
                android:textSize="16sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/newsDescription"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:maxLines="3"
                    android:paddingBottom="5dp"
                    android:layout_height="match_parent"
                    android:textStyle="italic"
                    android:fontFamily="@font/inter"
                    android:gravity="bottom"
                    android:textColor="@color/txt_pink"
                    android:text="12/04/2023"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:maxLines="3"
                    android:paddingBottom="5dp"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:textAlignment="textEnd"
                    android:textColor="@color/txt_pink"
                    android:paddingRight="10dp"
                    android:text="200 Views"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

        </LinearLayout>
<com.google.android.material.card.MaterialCardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">
    <ImageView
        android:id="@+id/newsImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:fontFamily="@font/inter"
        android:elevation="0dp"
        />
</com.google.android.material.card.MaterialCardView>


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
</layout>